<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO App</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    />
  </head>

  <body>
    <header>
      <div class="container pt-4">
        <div class="d-flex justify-content-between align-items-center">
          <h3>NodeJS Todo List</h3>

          <div class="d-flex align-items-center">
            <h5><%= username %></h5>
            <span class="mx-3 pb-2">|</span>
            <form action="/logout" method="post">
              <button type="submit" class="btn btn-dark btn-sm">Logout</button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <main class="pt-4">
      <form action="/add" method="post">
        <div class="mt-5 d-flex justify-content-center align-items-center">
          <input
            type="text"
            name="title"
            placeholder="Enter Title"
            class="form-control mx-2 w-25"
            id="title"
          />
          <input
            type="submit"
            value="Add Task"
            class="btn btn-info"
            id="add-task"
          />
        </div>
      </form>

      <table class="mt-5 mx-auto w-50" id="table">
        <tr>
          <th>Title</th>
          <th>Completed</th>
          <th>Created</th>
          <th colspan="2">Action</th>
        </tr>

        <% tasks.forEach(task=> { %>
        <tr>
          <td><%= task.title %></td>
          <% if (task.completed) { %>
          <td>Completed</td>
          <% } else { %>
          <td>Not Completed</td>
          <% } %>
          <td><%= moment(task.created).format('llll') %></td>
          <td>
            <a href="update/<%= task._id %>">
              <button
                type="button"
                class="btn btn-sm btn-warning"
                data-id="{{ todo.id }}"
                id="update-task"
              >
                Update
              </button>
            </a>
          </td>
          <td>
            <a href="delete/<%= task._id %>">
              <button
                type="button"
                class="btn btn-sm btn-danger"
                data-id="{{ todo.id }}"
                id="delete-task"
              >
                Delete
              </button>
            </a>
          </td>
        </tr>
        <% }) %>
      </table>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
